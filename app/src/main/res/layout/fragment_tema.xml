<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".idioma.TemaFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#c5e1a5">

        <Button
            android:id="@+id/buttonParaulas"
            android:layout_width="182dp"
            android:layout_height="149dp"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/borde_redondo"
            android:fontFamily="@font/caesar_dressing"
            android:text="VOCABULARIO"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:cornerRadius="90dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonNumeros"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.371" />

        <Button
            android:id="@+id/buttonNumeros"
            android:layout_width="182dp"
            android:layout_height="149dp"
            android:background="@drawable/borde_redondo"
            android:fontFamily="@font/caesar_dressing"
            android:text="NUMEROS"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:cornerRadius="90dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.93"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.371" />

        <Button
            android:id="@+id/buttonAlfabeto"
            android:layout_width="182dp"
            android:layout_height="149dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/borde_redondo"
            android:fontFamily="@font/caesar_dressing"
            android:text="ALFABETO"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:cornerRadius="90dp"
            app:layout_constraintEnd_toStartOf="@+id/buttonFrases"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonParaulas" />

        <Button
            android:id="@+id/buttonFrases"
            android:layout_width="182dp"
            android:layout_height="149dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/borde_redondo"
            android:fontFamily="@font/caesar_dressing"
            android:text="FRASES"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:cornerRadius="90dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.93"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonNumeros" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>